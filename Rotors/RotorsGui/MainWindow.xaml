        <TextBox Name="UserNameTextBox" HorizontalAlignment="Left" Height="23" Margin="116,163,0,0" TextWrapping="Wrap" Text="a" VerticalAlignment="Top" Width="272"/>
        <Button Name="StartMonitorButton" Content="Start Monitor" HorizontalAlignment="Left" Margin="116,252,0,0" VerticalAlignment="Top" Width="178" Click="StartMonitorButton_Click"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="15,202,0,0" VerticalAlignment="Top"/>
        <TextBox Name="PassWordTextBox" HorizontalAlignment="Left" Height="23" Margin="116,202,0,0" TextWrapping="Wrap" Text="User@123" VerticalAlignment="Top" Width="272"/>
        <Button Name="ReplaceItButton" Content="ReplaceIt" HorizontalAlignment="Left" Margin="337,252,0,0" VerticalAlignment="Top" Width="144" Click="ReplaceItButton_Click" />

    </Grid>
</Window>
