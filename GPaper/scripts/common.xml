<?xml version="1.0" encoding="UTF-8"?>
<project name="orips3common" basedir=".">
	<property environment="env"/>
	<property name="src.home" location="${basedir}/../src"/>
	<property name="test.home" location="${basedir}/../test"/>	
	<property name="orips3.home" value="orips3.war"></property>
	<property name="ejb3.home" value="orips3.jar"></property>
	<property name="build.ejb3.home" location="${basedir}/../../${ejb3.home}"/>
	<property name="build.orips3.home" location="${basedir}/../../${orips3.home}"/>
	<property name="configfiles.home" value="${basedir}/../configfiles"/>
	<property name="webroot.home" location="${basedir}/../WebRoot"/>
	<property name="lib.home" location="${basedir}/../lib"/>
	<property name="targetdeploydir" value="${env.JBOSS_HOME}/server/default"/>
	<property name="deploy.dir" value="${env.JBOSS_HOME}/server/default/deploy"/>
	<property name="jboss.lib.client.home" location="${basedir}/../jboss-lib-client"/>
	<property name="jboss.lib.home" location="${basedir}/../jboss-lib"/>
	<property name="jbpm.version" value="4.4"/>
	<property name="jbpm.deploy.dir" value="${basedir}/../jbpm${jbpm.version}/deploy"/>
	<path id="compile.path">
		<fileset dir="${jboss.lib.home}">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${jboss.lib.client.home}">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${lib.home}">
			<include name="**/*.jar" />
		</fileset>
	</path>
	</project>